alias refresh='source ~/.zshrc'

# Util
alias weather='curl http://wttr.in'

# nvim
alias vim="nvim"
alias v="nvim"

# Directories
alias dev="cd ~/dev"
alias dotfiles="cd ~/person/dotfiles"

# Paging
alias ybat="bat -l yaml"
alias yvim="vim -c 'set syntax=yaml'"
alias manzsh="man zshbuiltins"

# Terminal navigation
alias c='clear'
alias l='eza'
alias ll='eza -lhF'

# Shipwright
alias s='shipwright'

# Tailscale
alias tsup="tailscale up --accept-routes"
alias tsra="tailscale up --force-reauth --accept-routes"
alias tsdown="tailscale down"
