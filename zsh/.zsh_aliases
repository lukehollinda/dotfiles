alias refresh='source ~/.zshrc'

# Util
alias weather='curl http://wttr.in'

# NVim
alias vim="nvim"
alias v="nvim"

# Directories
alias dev="cd ~/dev"

# Git
alias g="git"
alias gs="git status"
alias gmcp="git log -1 --pretty=%B | pbcopy"
alias gaa="git add --all"
alias gc="git commit"
alias gca='git commit --amend'
alias ga='git add'
alias gco='git checkout'
alias grim='git rebase -i master'
alias gr='git rebase'
alias gdiff='git diff'
alias gp='git pull'
alias glog='git log --name-only'

alias cdg='cd "$(git rev-parse --show-toplevel || echo .)"'

# Paging
alias ybat="bat -l yaml"
alias yvim="vim -c 'set syntax=yaml'"
alias manzsh="man zshbuiltins"

# Terminal navigation
alias c='clear'
alias l='exa'
alias ll='exa -lhF'

# Shipwright
alias s='shipwright'
