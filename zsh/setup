# OH-MY-ZSH
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"
plugins=(zsh-vi-mode zsh-syntax-highlighting)
source $ZSH/oh-my-zsh.sh

export EDITOR='nvim'
export ZVM_VI_EDITOR="NVIM_APPNAME=nvim-pager nvim"

# Set up fuzzy finding
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# Terminal Prompt configuration (See starship/starship.toml)
eval "$(starship init zsh)"

# VI Mode
bindkey -v

# History
export HISTSIZE=10000000
export SAVEHIST=10000000
setopt HIST_IGNORE_DUPS

#Autocomplete
autoload -U +X compinit && compinit

# Google cloud autocomplete
if command -v brew &>/dev/null; then
  source "$(brew --prefix)/share/google-cloud-sdk/path.zsh.inc"
  source "$(brew --prefix)/share/google-cloud-sdk/completion.zsh.inc"
fi

# Get script path (Must use this method as the file is sourced through a symlink)
script_path=$(readlink -f "${(%):-%x}")
script_dir=$(dirname "$script_path")
git_root=$(cd "$script_dir" && git rev-parse --show-toplevel 2>/dev/null)

# Dotfile executables
export PATH="$PATH:$HOME/go/bin/"
export PATH="$PATH:$git_root/bin"
export PATH="$PATH:$git_root/bin/scripts"

# Source all other zsh files
for file in $(find "${git_root}/zsh" -type f ! -name 'setup' ! -name 'README.md' | sort)
do
  source "${file}"
done
